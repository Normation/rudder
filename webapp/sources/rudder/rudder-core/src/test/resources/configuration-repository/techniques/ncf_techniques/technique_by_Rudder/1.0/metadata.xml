      <NAME>technique_by_Rudder</NAME>
      <NAME>technique_by_Rudder_rudder_reporting</NAME>
    </BUNDLES>
    <FILES>
      <FILE name="RUDDER_CONFIGURATION_REPOSITORY/techniques/ncf_techniques/technique_by_Rudder/1.0/technique.cf">
