function Call_directives {
{% for condition in conditions %}
  $system_classes.SetCondition({{ condition|canonify_condition }})
{% endfor %}

  BeginDirectiveCall -Name @'
{{ technique_name }}
'@ -Id '{{ directive_id }}'
  {{ bundle_name }} -ReportId "rule_id@@{{ directive_id }}@@method_id" -TechniqueName "{{ technique_name }}" {{ params }} -PolicyMode ([Rudder.PolicyMode]::{{ policy_mode }})
  EndDirectiveCall -Name @'
{{ technique_name }}
'@ -Id '{{ directive_id }}'
}
