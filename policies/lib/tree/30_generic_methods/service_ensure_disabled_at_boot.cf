# @name Service ensure disabled at boot
# @rename service_disabled_at_boot
# @deprecated Use [service_disabled_at_boot](#_service_disabled_at_boot) instead.
# @description Force a service not to be enabled at boot
#
# @parameter name Service name (as recognized by systemd, init.d, etc...)
#
#
# @parameter_rename service_name name
# @class_prefix service_ensure_disabled_at_boot
# @class_parameter name
# @agent_support = ["cfengine-community", "dsc"]

bundle agent service_ensure_disabled_at_boot(name)
{
  vars:
      "class_prefix" string => "service_ensure_disabled_at_boot_${name}";

  classes:
      "pass3" expression => "pass2";
      "pass2" expression => "pass1";
      "pass1" expression => "any";

  methods:
    pass3::
      "${report_data.method_id}" usebundle => call_method("service_disabled");
      "${report_data.method_id}" usebundle => service_disabled("${name}");
      "${report_data.method_id}" usebundle => call_method_classes("${class_prefix}");
      "${report_data.method_id}" usebundle => call_method_classes_caller;
      "${report_data.method_id}" usebundle => call_method_end("service_disabled");
      "${report_data.method_id}" usebundle => log_rudder_v4("${name}", "Ensure service ${name} is disabled at boot", "");
}
