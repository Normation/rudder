# @name File ensure lines absent
# @description This is a bundle to ensure that a line is absent in a specific location
#
# @parameter file File name to edit
#Â @parameter lines Line(s) to remove in the file
#
# @class_prefix file_ensure_lines_absent
# @class_parameter file
# This bundle will define a class file_ensure_lines_absent_${file}_{kept,repaired,error,ok,reached}

bundle agent file_ensure_lines_absent(file, lines)
{
  vars:
      "class_prefix" string => canonify("file_ensure_lines_absent_${file}");

  files:
      "${file}"
        create        => "false",
        edit_line     => delete_lines_matching("${lines}"),
        edit_defaults => no_backup,
	classes       => classes_generic("${class_prefix}");

  methods:
      "report"
        usebundle  => _logger("Delete line(s) ${lines} from ${file}", "${class_prefix}");
}
