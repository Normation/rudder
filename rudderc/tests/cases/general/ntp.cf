# @name ntp
# @version 0.1

bundle agent ntp {

  vars:
    "resources_dir" string => "${this.promise_dirname}/resources";

  methods:
    # Ensure correct ntp configuration
    # 
    # source:
    # ---
    # name: content
    # id: d86ce2e5-d5b6-45cc-87e8-c11cca71d907
    # condition: debian
    # meta:
    #   cve: CVE-2022-3456
    # report_component: Ensure correct ntp configuration
    # report_parameter: path
    # params:
    #   - server ntp.org
    #   - "true"
    # 
    # 
    "d86ce2e5-d5b6-45cc-87e8-c11cca71d907" usebundle => _method_reporting_context_v4("Ensure correct ntp configuration", "path", "d86ce2e5-d5b6-45cc-87e8-c11cca71d907");
    "d86ce2e5-d5b6-45cc-87e8-c11cca71d907" usebundle => file_content(server ntp.org, true),
                                             if => concat("debian");
    "d86ce2e5-d5b6-45cc-87e8-c11cca71d907" usebundle => _classes_noop(canonify("${class_prefix}_file_content_path")),
                                         unless => concat("debian");
    "d86ce2e5-d5b6-45cc-87e8-c11cca71d907" usebundle => log_rudder("Skipping method 'Ensure correct ntp configuration' with key parameter 'path' since condition 'debian' is not reached", "path", canonify("${class_prefix}_file_content_path"), canonify("${class_prefix}_file_content_path"), @{args}),
                                         unless => concat("debian");

}
